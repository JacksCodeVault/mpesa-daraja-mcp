{
  "name": "mpesa-daraja-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Safaricom Daraja API Documentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "node test-server.js",
    "clean": "rm -rf dist",
    "prepare": "pnpm run build",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f daraja-mcp",
    "docker:status": "docker-compose ps",
    "docker:shell": "docker-compose exec daraja-mcp sh",
    "docker:clean": "docker-compose down --rmi all --volumes"
  },
  "keywords": ["mcp", "daraja", "mpesa", "safaricom", "api"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.17.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
